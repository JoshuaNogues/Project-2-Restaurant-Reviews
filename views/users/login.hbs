<h2>Login</h2>

<form action="/users/login"  method="post">

    <div>
    <label for="">Email: </label>
    </div>

    <div>
    <input type="email" name="email">
    </div>

    <div>
    <label for="">Password: </label>
    </div>

    <div>
    <input type="password" name="password">
    </div>

    <button type="submit">Login</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}